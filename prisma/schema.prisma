generator client {
  provider      = "prisma-client"
  output        = "../prisma/generated/client"
  binaryTargets = ["native", "debian-openssl-3.0.x", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MealPreference {
  NORMAL
  DIET
  KIDS
}

enum SubscriptionStatus {
  FREE
  ACTIVE
  CANCELED
}

model UserProfile {
  id             String           @id @default(cuid())
  supabaseId     String           @unique
  name           String?
  email          String?
  isPro          Boolean          @default(false)
  proSince       DateTime?
  proExpiresAt   DateTime?
  dietaryPref    MealPreference   @default(NORMAL)
  allergies      String[]         @default([])
  peopleCount    Int              @default(1)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  mealPlans      MealPlan[]
  subscription   Subscription?
}

model MealPlan {
  id               String         @id @default(cuid())
  userId           String
  weekOf           DateTime
  peopleCount      Int
  dietaryPref      MealPreference
  allergies        String[]       @default([])
  meals            Json
  groceryList      Json
  generatedModel   String         @default("gemini-1.5-pro")
  createdAt        DateTime       @default(now())

  user             UserProfile    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                 String              @id @default(cuid())
  userId             String              @unique
  status             SubscriptionStatus  @default(FREE)
  priceId            String?
  currentPeriodEnd   DateTime?
  cancelAt           DateTime?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  user               UserProfile         @relation(fields: [userId], references: [id], onDelete: Cascade)
}
